.large-4.small-12.medium-7
  = form_for @product, url: admin_path do |f|
    = f.hidden_field :id
    = f.text_field :name, :placeholder => 'name'
    = f.text_field :description, :placeholder => 'description'
    = f.text_field :quantity, :placeholder => 'quantity'
    = f.text_field :slug_en, :placeholder => 'url'
    %hr
    = f.text_field :price, :placeholder => 'price'
    = f.text_field :discount, :placeholder => 'discount'
    On sale
    = f.check_box :sale_flag
    %hr
    = f.collection_select :category_id, categories, :id, :name
    %hr
    = image_tag @product.image.url.to_s if @product.image
    = f.file_field :image
    = f.submit 'Save', :class => 'button'
  = link_to 'Delete', admin_delete_path(:product, @product.id), :method => :delete, :confirm => 'Realy delete?'