.large-4.small-12.medium-7
  = form_for @cat, url: admin_path do |f|
    = f.hidden_field :id
    = f.text_field :name, :placeholder => 'name'
    = f.text_field :description, :placeholder => 'description'
    = f.text_field :slug_en, :placeholder => 'url'
    = f.collection_select :ancestry, @ancestry, :id, :name
    = f.submit 'Save', :class => 'button'
  = link_to 'Delete', admin_delete_path(:category, @cat.id), :method => :delete, :confirm => 'Realy delete?'